namespace Betsy
{
    class Chat : English
    {
        // Think about what what was said
        public static string Think(string you, string temp, string me)
        {
            // Think
            if (you == "Hello" || you == "Goodbye")
            {
                me = you; // Output
            }
            else if (you != "Hello" || you != "Goodbye")
            {
                me = null;

                // Defualt
                if (me == null)
                {
                    me = "I don't know what to say.";
                }
            }

            // case (you) Build out case of responses

            return me;
        }
    }
