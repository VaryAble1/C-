using System;

class Welcome1
{
    //Main method begins execution of C# application
    static void Main()
    {
        string person = "buddy"; //variable that stores the string "buddy"
        Console.WriteLine($"Hello World!!\nWelcome to C# Programming {person}!");
    } // End Main

} //End class Welcome1
